{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react",
    "lib": ["es6"],
    "moduleResolution": "node",
    "noEmit": true,
    "target": "ESNext",
    "noImplicitAny": true
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "client/metro.config.js",
    "jest.config.js",
    "client/prettierrc.js",
    "client/react-native.config.js",
    "webpack.config.js"
  ],
  "include": ["./src/**/*"]
}
